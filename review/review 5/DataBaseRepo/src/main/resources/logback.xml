<configuration>

    <appender name="myLogs" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>C:\Users\xxpoojas\Desktop\DLTE-Review5/app.log</file> <!-- Define log file name and path -->

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>C:\Users\xxpoojas\Desktop\DLTE-Review5/app-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>2KB</maxFileSize>
            <totalSizeCap>6KB</totalSizeCap>
            <maxHistory>1</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

